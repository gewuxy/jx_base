<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginLeft="@dimen/margin"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/meeting_item_title"
            style="@style/tv.meeting"
            android:text="廣東省第29屆腫瘤病學年會專家預告"
            android:textColor="@color/text_333"
            android:textSize="14dp"/>

        <LinearLayout
            android:layout_marginTop="14dp"
            style="@style/tv.meeting"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:src="@mipmap/meeting_ic_retrospect"
                android:id="@+id/meeting_item_state_iv"
                android:layout_height="11dp"
                android:layout_width="11dp"
                style="@style/tv.meeting"/>

            <TextView
                android:id="@+id/meeting_item_state_tv"
                style="@style/tv.meeting"
                android:text="精彩回顧"
                android:textColor="#5cb0de"/>
            <!-- TODO:未设置宽高2套切图用哪套? -->
            <ImageView
                android:src="@mipmap/meeting_ic_tumour"
                android:layout_marginLeft="8dip"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:id="@+id/meeting_item_section_iv"
                style="@style/tv.meeting"/>

            <TextView
                android:id="@+id/meeting_item_section_tv"
                style="@style/tv.meeting"
                android:text="肿瘤科"/>

            <TextView
                android:id="@+id/meeting_item_time"
                style="@style/tv.meeting"
                android:layout_marginLeft="8dip"
                android:text="@string/default_date"/>

            <TextView
                android:id="@+id/meeting_item_data"
                style="@style/tv.meeting"
                android:text="@string/default_time"/>
        </LinearLayout>

    </LinearLayout>

    <View style="@style/divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dip"
        android:layout_marginLeft="@dimen/margin"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <!-- TODO:未设置宽高 -->
        <ImageView
            android:src="@mipmap/meeting_ic_tumour"
            style="@style/tv.meeting"/>

        <TextView
            style="@style/tv.meeting"
            android:layout_marginLeft="8dip"
            android:text="广州CDC死因与肿瘤监测科"
            android:textColor="@color/text_333"/>
    </LinearLayout>
</LinearLayout>