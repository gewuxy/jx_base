            android:name=".activity.me.EpnUseRuleActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.me.JXActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.me.DisclaimerActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.me.ContributionInvitedActivity"
            android:screenOrientation="portrait"/>


        <!-- register -->
        <activity
            android:name=".activity.register.RegisterActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.register.ActivationCodeExplainActivity"
            android:screenOrientation="portrait"/>
