        <activity
            android:name=".activity.LoginActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.me.ForgetPwdActivity"
            android:screenOrientation="portrait"/>

        <!-- data -->
        <activity
            android:name=".activity.data.DataCenterActivity"
            android:screenOrientation="portrait"/>

        <!-- me -->
        <activity
            android:name=".activity.me.HelpAndFeedbackActivity"
            android:screenOrientation="portrait"/>
