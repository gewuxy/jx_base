<resources>

    <!-- 普通按钮样式 -->
    <style name="tv.common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/form_item_height</item>
        <item name="android:background">@drawable/btn_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
    </style>

    <!-- 普通输入框样式 -->
    <style name="et.common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edit_height</item>
        <item name="android:paddingLeft">@dimen/margin</item>
        <item name="android:background">@drawable/white</item>
        <item name="android:textColor">@color/text_666</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColorHint">@color/text_b3b3b3</item>
    </style>

    <style name="tv.dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/form_item_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_01b557</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <!-- meeting -->
    <style name="meeting">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 主页-会议-条目-信息中的textview -->
    <style name="meeting.tv">
        <item name="android:layout_marginLeft">4dip</item>
        <item name="android:textSize">10dp</item>
    </style>

    <!-- 会议详情播放前的textview -->
    <style name="meeting.detail">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/text_ffffff</item>
        </style>

</resources>
