<resources>

    <!-- 普通按钮样式 -->
    <style name="tv.common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/form_item_height</item>
        <item name="android:background">@drawable/btn_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
    </style>

    <!-- 普通输入框样式 -->
    <style name="et.common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edit_height</item>
        <item name="android:paddingLeft">@dimen/margin</item>
        <item name="android:background">@drawable/white</item>
        <item name="android:textColor">@color/text_666</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColorHint">@color/text_b3</item>
    </style>

    <style name="tv.dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/form_item_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_01b557</item>
        <item name="android:textSize">14dp</item>
    </style>

    <!-- meeting -->
    <style name="tv.meeting">
        <item name="android:layout_marginLeft">4dip</item>
        <item name="android:textSize">@dimen/list_padding</item>
    </style>

    <!-- meeting 12大的白字 -->
    <style name="tv.meeting.detail">
        <item name="android:textSize">@dimen/margin</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- meeting 底部的Button -->
    <style name="v.meeting">
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
    </style>

    <style name="iv.meeting">
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_width">16dp</item>
    </style>

    <style name="iv.meeting.record"/>

    <style name="iv.meeting.record.symbol">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:src">@mipmap/meeting_record_ic_symbol</item>
    </style>

    <style name="tv.meeting.button">
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="divider.meeting">
        <item name="android:background">@color/divider</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">16dp</item>
    </style>

    <style name="divider.record">
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_height">18dp</item>
    </style>

</resources>
