<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/meeting_module_bg"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="44dp"/>

    <lib.ys.network.image.NetworkImageView
        android:id="@+id/meeting_ppt_iv_play_niv"
        android:layout_width="match_parent"
        android:layout_height="204dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="62dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/meeting_ppt_iv_left"
            android:layout_width="16dp"
            android:layout_height="23dp"
            android:layout_marginRight="60dp"
            android:src="@mipmap/meeting_ppt_ic_left"/>

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="80dp">

            <yy.doctor.view.CircleProgressView
                android:id="@+id/meeting_ppt_v_progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                view:circle_backProgress="@color/transparent"
                view:circle_progress="@color/white"
                view:circle_widthDp="3dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/meeting_ppt_ic_play"/>
        </RelativeLayout>


        <ImageView
            android:id="@+id/meeting_ppt_iv_right"
            android:layout_width="16dp"
            android:layout_height="23dp"
            android:layout_marginLeft="60dp"
            android:src="@mipmap/meeting_ppt_ic_right"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:text="00:00"
        android:textColor="@color/text_99fff"
        android:textSize="14dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|right"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="21dp"
            android:layout_marginBottom="28dp"
            android:src="@mipmap/meeting_ppt_ic_first"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="21dp"
            android:layout_marginBottom="28dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="34dp"
            android:src="@mipmap/meeting_ppt_ic_comment"/>
    </LinearLayout>
</LinearLayout>