<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:background="@mipmap/meeting_ic_ppt_bg"
    android:orientation="vertical">

    <lib.ys.network.image.NetworkImageView
        android:id="@+id/meeting_ppt_play_niv"
        android:layout_width="360dp"
        android:layout_height="320dp"/>

    <LinearLayout
        android:layout_marginTop="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/meeting_ppt_played_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:05"
            android:textColor="#fefefe"
            android:textSize="10dp"/>

        <SeekBar
            android:id="@+id/meeting_ppt_progress_sb"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:progressDrawable="@drawable/seekbar_progress"
            android:thumb="@mipmap/meeting_ic_ppt_progress"/>

        <TextView
            android:id="@+id/meeting_ppt_all_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:50"
            android:textColor="#fefefe"
            android:textSize="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/meeting_ppt_first_iv"
            android:layout_width="25dp"
            android:layout_height="21dp"
            android:layout_marginRight="40dp"
            android:src="@mipmap/meeting_ic_ppt_first"/>

        <ImageView
            android:id="@+id/meeting_ppt_last_iv"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@mipmap/meeting_ic_ppt_last"/>

        <ImageView
            android:id="@+id/meeting_ppt_control_iv"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginBottom="@dimen/margin"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="@dimen/margin"
            android:src="@mipmap/meeting_ic_ppt_play"/>

        <ImageView
            android:id="@+id/meeting_ppt_next_iv"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@mipmap/meeting_ic_ppt_next"/>

        <ImageView
            android:id="@+id/meeting_ppt_single_details_iv"
            android:layout_width="25dp"
            android:layout_height="21dp"
            android:layout_marginLeft="40dp"
            android:src="@mipmap/meeting_ic_ppt_single_details"/>
    </LinearLayout>
</LinearLayout>