<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/meeting_ppt_bg"
    android:gravity="bottom"
    android:orientation="vertical">

    <lib.ys.network.image.NetworkImageView
        android:id="@+id/meeting_ppt_iv_play_niv"
        android:layout_width="match_parent"
        android:layout_height="320dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/meeting_ppt_played_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:05"
            android:textColor="#fefefe"
            android:textSize="10dp"/>

        <SeekBar
            android:id="@+id/meeting_ppt_sb_progress"
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:progressDrawable="@drawable/meeting_ppt_seekbar_progress"
            android:thumb="@mipmap/meeting_ppt_ic_progress"/>

        <TextView
            android:id="@+id/meeting_ppt_tv_all_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:50"
            android:textColor="#fefefe"
            android:textSize="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/meeting_ppt_iv_first"
            android:layout_width="25dp"
            android:layout_height="21dp"
            android:layout_marginRight="40dp"
            android:src="@mipmap/meeting_ppt_ic_first"/>

        <ImageView
            android:id="@+id/meeting_ppt_iv_last"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@mipmap/meeting_ppt_ic_last"/>

        <ImageView
            android:id="@+id/meeting_ppt_iv_control"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginBottom="@dimen/margin"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="@dimen/margin"
            android:src="@mipmap/meeting_ppt_ic_play"/>

        <ImageView
            android:id="@+id/meeting_ppt_iv_next"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@mipmap/meeting_ppt_ic_next"/>

        <ImageView
            android:id="@+id/meeting_ppt_iv_comment"
            android:layout_width="25dp"
            android:layout_height="21dp"
            android:layout_marginLeft="40dp"
            android:src="@mipmap/meeting_ppt_ic_comment"/>
    </LinearLayout>
</LinearLayout>