<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/app_title_bar_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <lib.ys.view.CornerView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:layout_marginLeft="12dp"
        android:background="#663da1f4"
        app:corner_radius="@dimen/radius"
        app:corner_useStroke="false">

        <ImageView
            android:id="@+id/home_title_bar_ic_search"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="6dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_search"/>

        <EditText
            android:id="@+id/home_title_bar_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/home_title_bar_ic_search"
            android:background="@drawable/transparent"
            android:hint="搜索单位号或者会议关键字"
            android:textSize="12dp"
            android:textColor="@color/text_66fff"
            android:textColorHint="@color/text_66fff"/>

    </lib.ys.view.CornerView>

    <ImageView
        android:id="@+id/home_title_bar_ic_inform"
        android:layout_width="16dp"
        android:layout_height="18dp"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin_large"
        android:src="@mipmap/ic_inform"/>

</LinearLayout>
