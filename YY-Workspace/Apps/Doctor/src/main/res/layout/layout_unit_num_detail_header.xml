<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="所在地"
            android:textColor="@color/text_888"
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/unit_num_detail_tv_address"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_large"
            android:gravity="center_vertical"
            android:text="广州"
            android:textColor="@color/text_333"
            android:textSize="10dp"/>

    </LinearLayout>

    <View
        style="@style/divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin"
        android:paddingLeft="@dimen/margin"
        android:paddingTop="@dimen/margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="简介"
            android:textColor="@color/text_888"
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/unit_num_detail_tv_introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="36dp"
            android:gravity="center_vertical"
            android:lineSpacingExtra="12dp"
            android:text="规定收费是多久发货快速减肥水电费束带结发及时的风格的风格地方丹甫股份的客服的世界东方的健身房大姐夫的是否记得看大姐夫科技的疯狂减肥的身份是的房间开始的疯狂世界的分散"
            android:textColor="@color/text_333"
            android:textSize="10dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"/>

    <LinearLayout
        android:id="@+id/unit_num_detail_layout_file"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/item_selector"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            android:text="查看资料"
            android:textColor="@color/text_888"
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/unit_num_detail_tv_file_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.58"
            android:gravity="right"
            android:textColor="@color/text_888"
            android:textSize="10dp"/>

        <ImageView
            android:id="@+id/unit_num_detail_iv_arrow"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:visibility="gone"
            android:src="@mipmap/unit_num_detail_ic_arrow"/>

    </LinearLayout>

    <View
        style="@style/divider"/>

    <LinearLayout
        android:id="@+id/unit_num_detail_file_layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <View
        android:id="@+id/unit_num_detail_large_divider"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>

</LinearLayout>