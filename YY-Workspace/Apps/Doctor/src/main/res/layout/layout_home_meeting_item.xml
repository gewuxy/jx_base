<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/home_meeting_item_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="科研成才之路"
                android:textColor="@color/text_333"
                android:textSize="14dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/home_meeting_item_iv_status"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/meeting_ic_not_started"/>

                <TextView
                    android:id="@+id/home_meeting_item_tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="未开始"
                    android:textColor="@color/text_01b557"
                    android:textSize="9dp"/>

                <TextView
                    android:id="@+id/home_meeting_item_tv_section"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="骨科"
                    android:textColor="@color/text_888"
                    android:textSize="9dp"/>

                <TextView
                    android:id="@+id/home_meeting_item_tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="12月9日16：30"
                    android:textColor="@color/text_888"
                    android:textSize="9dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="时长:"
                    android:textColor="@color/text_888"
                    android:textSize="9dp"/>

                <TextView
                    android:id="@+id/home_meeting_item_tv_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="1.5小时"
                    android:textColor="@color/text_888"
                    android:textSize="9dp"/>

                <TextView
                    android:id="@+id/home_meeting_item_tv_collection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:drawableLeft="@mipmap/home_ic_meeting_collection"
                    android:drawablePadding="4dp"
                    android:text="已收藏"
                    android:textColor="@color/text_83c0f3"
                    android:textSize="9dp"/>

                <!--<lib.ys.view.NestCheckBox
                    android:id="@+id/home_meeting_item_check_box_collection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/home_meeting_checkbox_bg_selector"
                    android:gravity="center">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:background="@drawable/transparent"
                        android:button="@drawable/home_meeting_checkbox_btn_selector"
                        android:text="收藏"
                        android:textColor="@color/text_83c0f3"
                        android:textSize="9dp"/>

                </lib.ys.view.NestCheckBox>-->

            </LinearLayout>

        </LinearLayout>

        <View
            style="@style/divider"
            android:background="@color/app_bg"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="58dp">

            <lib.ys.network.image.NetworkImageView
                android:id="@+id/home_meeting_item_iv_speaker"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/home_meeting_item_tv_speaker_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/home_meeting_item_iv_speaker"
                android:text="王学"
                android:textColor="@color/text_666"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/home_meeting_item_tv_speaker_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_alignBottom="@id/home_meeting_item_tv_speaker_name"
                android:layout_toRightOf="@id/home_meeting_item_tv_speaker_name"
                android:text="主任医师"
                android:textColor="@color/text_666"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/home_meeting_item_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_meeting_item_tv_speaker_name"
                android:layout_toRightOf="@id/home_meeting_item_iv_speaker"
                android:text="在职医院："
                android:textColor="@color/text_888"
                android:textSize="9dp"/>

            <TextView
                android:id="@+id/home_meeting_item_tv_hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_meeting_item_tv_speaker_name"
                android:layout_toRightOf="@id/home_meeting_item_tv"
                android:text="广东省医院"
                android:textColor="@color/text_888"
                android:textSize="9dp"/>

        </RelativeLayout>

    </LinearLayout>

    <lib.ys.network.image.NetworkImageView
        android:id="@+id/home_meeting_item_iv_unit"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="34dp"
        android:layout_alignParentRight="true"/>

</RelativeLayout>