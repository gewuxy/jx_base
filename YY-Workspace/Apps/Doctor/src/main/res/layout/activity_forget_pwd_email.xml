<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingLeft="40dp"
    android:paddingRight="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <yy.doctor.view.AutoCompleteEditText
            android:id="@+id/forget_pwd_et_email"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:layout_marginLeft="28dp"
            android:singleLine="true"
            android:hint="@string/input_email"
            android:textColorHint="@color/text_b3"
            android:textSize="15dp"
            android:textColor="@color/text_666"/>

        <ImageView
            android:id="@+id/forget_email_iv_cancel"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="8dp"
            android:layout_marginRight="21dp"
            android:visibility="gone"
            android:src="@mipmap/login_ic_cancel"/>

    </LinearLayout>

    <TextView
        style="@style/tv.common"
        android:id="@+id/forget_pwd_tv_send_email"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/btn_selector_blue"
        android:text="@string/send_email"
        android:textSize="15dp"/>

</LinearLayout>