<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginLeft="@dimen/margin"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/meeting_item_tv_title"
            style="@style/tv.meeting"
            android:text="廣東省第29屆腫瘤病學年會專家預告"
            android:textColor="@color/text_333"
            android:textSize="14dp"/>

        <LinearLayout
            style="@style/tv.meeting"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/meeting_item_iv_state"
                style="@style/tv.meeting"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:src="@mipmap/meeting_ic_retrospect"/>

            <TextView
                android:id="@+id/meeting_item_tv_state"
                style="@style/tv.meeting"
                android:text="精彩回顧"
                android:textColor="#5cb0de"/>

            <!-- TODO:未设置宽高2套切图用哪套? -->
            <ImageView
                android:id="@+id/meeting_item_iv_section"
                style="@style/tv.meeting"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="8dip"
                android:src="@mipmap/meeting_ic_tumour"/>

            <TextView
                android:id="@+id/meeting_item_tv_section"
                style="@style/tv.meeting"
                android:text="肿瘤科"/>

            <TextView
                android:id="@+id/meeting_item_tv_time"
                style="@style/tv.meeting"
                android:layout_marginLeft="8dip"
                android:text="@string/default_date"/>

            <TextView
                android:id="@+id/meeting_item_tv_data"
                style="@style/tv.meeting"
                android:text="@string/default_time"/>

        </LinearLayout>

    </LinearLayout>

    <View style="@style/divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dip"
        android:layout_marginLeft="@dimen/margin"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- TODO:未设置宽高 -->
        <ImageView
            style="@style/tv.meeting"
            android:src="@mipmap/meeting_ic_tumour"/>

        <TextView
            style="@style/tv.meeting"
            android:layout_marginLeft="8dip"
            android:text="广州CDC死因与肿瘤监测科"
            android:textColor="@color/text_333"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/app_bg"/>

</LinearLayout>