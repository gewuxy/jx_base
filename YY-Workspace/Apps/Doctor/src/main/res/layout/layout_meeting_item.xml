<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="@dimen/margin"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/meeting_item_tv_title"
            style="@style/tv"
            android:text="廣東省第29屆腫瘤病學年會專家預告"
            android:textColor="@color/text_333"
            android:textSize="14dp"/>

        <LinearLayout
            style="@style/v"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/meeting_item_iv_state"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:src="@mipmap/meeting_ic_retrospect"/>

            <TextView
                android:id="@+id/meeting_item_tv_state"
                style="@style/tv.meeting"
                android:text="精彩回顧"
                android:textColor="@color/text_5cb0de"/>

            <TextView
                android:id="@+id/meeting_item_tv_section"
                style="@style/tv.meeting"
                android:text="肿瘤科"/>

            <TextView
                android:id="@+id/meeting_item_tv_time"
                style="@style/tv.meeting"
                android:text="@string/default_date"/>

            <TextView
                android:id="@+id/meeting_item_tv_data"
                style="@style/tv.meeting"
                android:text="@string/default_time"/>

        </LinearLayout>

    </LinearLayout>

    <View style="@style/divider"
        android:background="#80dbdbdb"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <lib.ys.network.image.NetworkImageView
            android:layout_marginLeft="@dimen/margin"
            android:id="@+id/meeting_item_iv_unit_num"
            android:layout_width="18dp"
            android:layout_height="18dp"/>

        <TextView
            android:id="@+id/meeting_item_tv_unit_num"
            style="@style/tv.meeting"
            android:layout_marginLeft="8dp"
            android:text="广州CDC死因与肿瘤监测科"
            android:textColor="@color/text_333"/>

    </LinearLayout>

    <View style="@style/divider"/>

</LinearLayout>