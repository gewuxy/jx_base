<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:background="@drawable/home_unit_num_bg">

    <LinearLayout
        android:id="@+id/home_unit_num_layout"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <lib.ys.network.image.NetworkImageView
            android:id="@+id/home_unit_num_item_iv"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:layout_width="51dp"
            android:layout_height="51dp"/>

        <TextView
            android:id="@+id/home_unit_num_item_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="2dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:text=""
            android:textSize="10dp"
            android:textColor="@color/text_6d"/>

        <TextView
            android:id="@+id/home_unit_num_item_tv_attention"
            android:layout_width="66dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/unit_num_detail_tv_attention_bg_selector"
            android:drawableLeft="@drawable/unit_num_detail_tv_attention_selector"
            android:drawablePadding="4dp"
            android:paddingLeft="16dp"
            android:text="关注"
            android:textSize="9dp"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>