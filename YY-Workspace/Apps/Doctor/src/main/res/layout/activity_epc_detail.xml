<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <lib.ys.network.image.NetworkImageView
        android:id="@+id/epc_detail_iv"
        android:layout_width="match_parent"
        android:layout_height="180dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingLeft="@dimen/margin"
        android:paddingTop="@dimen/margin_large"
        android:paddingBottom="@dimen/margin_large">

        <TextView
            android:id="@+id/epc_detail_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手工打磨"
            android:textSize="16dp"
            android:textColor="@color/text_333"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="兑换值："
                android:textSize="12dp"
                android:textColor="@color/text_333"/>

            <TextView
                android:id="@+id/epc_detail_tv_epn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1200"
                android:textSize="14dp"
                android:textColor="@color/text_0882e7"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 象数"
                android:textSize="10dp"
                android:textColor="@color/text_333"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_large"
                android:text="全国配送商品"
                android:textSize="10dp"
                android:textColor="@color/text_888"/>

            <TextView
                android:id="@+id/epc_detail_tv_limitation_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_large"
                android:text="限购一份"
                android:textSize="10dp"
                android:textColor="@color/text_01b557"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/epc_detail_tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:lineSpacingExtra="@dimen/margin"
        android:layout_marginTop="18dp"
        android:text=""
        android:textSize="14dp"
        android:textColor="@color/text_333"/>

    <TextView
        android:id="@+id/epc_detail_tv_btn"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/epc_detail_btn_selector_blue"
        android:gravity="center"
        android:text="立即兑换"
        android:textSize="14dp"
        android:textColor="@color/white"/>

</LinearLayout>
