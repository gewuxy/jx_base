<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@drawable/exam_intro_bg">

        <ImageView
            android:id="@+id/exam_end_iv_end"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="18dp"
            android:src="@mipmap/exam_end_ic_end"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/exam_end_iv_end"
            android:layout_alignBottom="@+id/exam_end_iv_end"
            android:text="考试结束"
            android:textSize="14dp"
            android:textColor="@color/text_666"/>

        <ImageView
            android:id="@+id/exam_end_iv_time"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginTop="26dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/exam_end_ic_time"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/exam_end_iv_end"
            android:layout_alignBottom="@+id/exam_end_iv_end"
            android:text="考试结束"
            android:textSize="14dp"
            android:textColor="@color/text_666"/>

    </RelativeLayout>

    <TextView
        style="@style/tv.common"
        android:id="@+id/exam_end_tv_btn"
        android:layout_marginTop="22dp"
        android:text="完成考试"/>

</LinearLayout>
