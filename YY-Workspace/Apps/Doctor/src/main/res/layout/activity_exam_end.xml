<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin"
        android:paddingBottom="52dp"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginTop="14dp"
        android:background="@drawable/exam_intro_radius_bg">

        <ImageView
            android:id="@+id/exam_end_iv_end"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="16dp"
            android:src="@mipmap/exam_end_ic_end"/>

        <TextView
            android:id="@+id/exam_end_tv_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/exam_end_iv_end"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/exam_end_iv_end"
            android:text="考试结束"
            android:textColor="@color/text_666"
            android:textSize="14dp"/>

        <ImageView
            android:id="@+id/exam_end_iv_time"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginTop="26dp"
            android:layout_toLeftOf="@+id/exam_end_tv_consuming"
            android:src="@mipmap/exam_end_ic_time"/>

        <TextView
            android:id="@+id/exam_end_tv_consuming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/exam_end_iv_time"
            android:layout_marginLeft="8dp"
            android:layout_toLeftOf="@+id/exam_end_tv_time"
            android:text="耗时"
            android:textColor="@color/text_888"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/exam_end_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/exam_end_tv_consuming"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="18dp"
            android:text="30:10分"
            android:textColor="@color/text_888"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/exam_end_tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp"
            android:text="85"
            android:textColor="@color/text_0882e7"
            android:textSize="68dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="165dp"
            android:layout_toRightOf="@+id/exam_end_tv_score"
            android:text="分"
            android:textColor="@color/text_666"
            android:textSize="16dp"/>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exam_end_tv_score"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="答对"
                android:textColor="@color/text_888"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/exam_end_tv_right_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="85"
                android:textColor="@color/text_01b557"
                android:textSize="14dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:text="答错"
                android:textColor="@color/text_888"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/exam_end_tv_error_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="15"
                android:textColor="@color/text_e6600e"
                android:textSize="14dp"/>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        style="@style/tv.common"
        android:id="@+id/exam_end_tv_btn"
        android:layout_marginTop="22dp"
        android:text="完成考试"/>

</LinearLayout>
