<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:gravity="center_vertical"
    tools:showIn="@layout/activity_meeting_details">
    <!--TODO:没给图片大小边距等-->
    <lib.ys.network.image.NetworkImageView
        android:id="@+id/meeting_details_icon_number"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin"
        android:layout_weight="1"
        android:orientation="vertical">
        <!--TODO:没给字体大小颜色等属性-->
        <TextView
            android:id="@+id/meeting_details_name_number_host"
            style="@style/meeting"
            android:text="河北省医学会神经病分会"/>

        <TextView
            android:id="@+id/meeting_details_name_number_deputy"
            style="@style/meeting"
            android:text="主办公众号"/>
    </LinearLayout>

    <!--TODO:没给大小-->
    <LinearLayout
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin"
        android:background="@drawable/meeting_details_attention_selector"
        android:orientation="horizontal"
        android:padding="@dimen/margin">

        <TextView
            style="@style/meeting.detail"
            android:text="+"/>

        <TextView
            style="@style/meeting.detail"
            android:layout_marginLeft="4dp"
            android:text="关注"/>
    </LinearLayout>
</LinearLayout>