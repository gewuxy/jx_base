<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="226dp"
    tools:showIn="@layout/activity_meeting_details">

    <lib.ys.network.image.NetworkImageView
        android:id="@+id/meeting_details_play_niv"
        android:layout_width="match_parent"
        android:layout_height="226dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:background="#6b000000"
        android:gravity="center_vertical|end"
        android:orientation="horizontal">
        <!-- TODO:间距 -->
        <TextView
            android:id="@+id/meeting_details_date"
            style="@style/tv.meeting.detail"
            android:layout_marginRight="@dimen/margin"
            android:text="@string/default_date"/>

        <TextView
            android:id="@+id/meeting_details_time"
            style="@style/tv.meeting.detail"
            android:layout_marginRight="@dimen/margin"
            android:text="@string/default_time"/>
    </LinearLayout>
</RelativeLayout>