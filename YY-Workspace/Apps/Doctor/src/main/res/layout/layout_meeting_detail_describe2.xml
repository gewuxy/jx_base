<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:gravity="center_vertical"
    tools:showIn="@layout/activity_meeting_details">

    <lib.ys.network.image.NetworkImageView
        android:id="@+id/meeting_niv_icon_number"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginLeft="@dimen/margin"/>

    <LinearLayout
        style="@style/v"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/meeting_tv_name_number_host"
            style="@style/tv"
            android:textSize="14dp"
            android:textColor="@color/text_666"
            android:text="河北省医学会神经病分会"/>

        <TextView
            android:id="@+id/meeting_tv_name_number_deputy"
            style="@style/tv"
            android:textColor="@color/text_888"
            android:layout_marginTop="4dp"
            android:text="主办公众号"/>
    </LinearLayout>

</LinearLayout>