<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin"
    android:paddingRight="@dimen/margin">

    <TextView
        android:id="@+id/meeting_detail_tv_title"
        style="@style/tv"
        android:layout_marginTop="16dp"
        android:text="河北省第29届神经病报告"
        android:textColor="@color/text_0882e7"
        android:textSize="14dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/meeting_detail_tv_section"
            style="@style/tv.meeting.detail"
            android:text="内科"/>

        <ImageView
            android:id="@+id/meeting_detail_tv_cme"
            android:layout_width="22dp"
            android:layout_height="13dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/meeting_detail_ic_cme"/>

        <ImageView
            android:id="@+id/meeting_detail_tv_epn"
            android:layout_width="29dp"
            android:layout_height="13dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/meeting_detail_selector_epn_type"/>
    </LinearLayout>

    <TextView
        android:id="@+id/meeting_detail_tv_award"
        style="@style/tv.meeting.detail"
        android:layout_marginTop="6dp"
        android:text="@string/meeting_epn_award_before"/>

    <TextView
        android:id="@+id/meeting_detail_tv_cmd"
        style="@style/tv.meeting.detail"
        android:layout_marginTop="6dp"
        android:text="@string/meeting_cme_award_before"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="14dp"/>
</LinearLayout>