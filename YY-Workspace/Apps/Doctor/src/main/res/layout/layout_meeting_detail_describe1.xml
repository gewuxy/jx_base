<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="86dp"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin"
    tools:showIn="@layout/activity_meeting_details">

    <TextView
        android:id="@+id/meeting_details_tv_title"
        style="@style/tv"
        android:text="河北省第29届神经病报告"
        android:textColor="@color/text_0882e7"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/meeting_details_tv_award"
        style="@style/tv.meeting.detail"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="6dp"
        android:text="本次会议奖励象数:50,还有260人能够获得奖励."
        android:textColor="@color/text_666"/>

    <TextView
        android:id="@+id/meeting_details_tv_section"
        style="@style/tv.meeting.detail"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="6dp"
        android:text="内科"
        android:textColor="@color/text_666"/>
</LinearLayout>