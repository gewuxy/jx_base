<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <lib.ys.view.CornerView
        android:layout_width="330dp"
        android:layout_height="30dp"
        app:corner_radius="@dimen/radius"
        app:corner_useStroke="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#663da1f4"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home_nav_bar_ic_search"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="6dp"
                android:src="@mipmap/nav_bar_ic_search"/>

            <EditText
                android:id="@+id/home_nav_bar_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:background="@drawable/transparent"
                android:hint="搜索单位号或者会议关键字"
                android:singleLine="true"
                android:textColor="@color/text_66fff"
                android:textColorHint="@color/text_66fff"
                android:textSize="12dp"/>

        </LinearLayout>

    </lib.ys.view.CornerView>

</LinearLayout>
