<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_alignParentBottom="true"
    android:background="#dbdbdb"
    android:orientation="horizontal"
    android:paddingTop="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- 考试 -->
        <LinearLayout
            android:id="@+id/meeting_detail_layout_exam"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/meeting_detail_iv_exam"
                style="@style/iv.meeting"
                android:src="@mipmap/meeting_ic_exam"/>

            <TextView
                android:id="@+id/meeting_detail_tv_exam"
                style="@style/tv.meeting.button"
                android:text="考试"/>
        </LinearLayout>

        <View
            style="@style/v.meeting"/>

        <!-- 问卷 -->
        <LinearLayout
            android:id="@+id/meeting_detail_layout_que"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/meeting_detail_iv_que"
                style="@style/iv.meeting"
                android:src="@mipmap/meeting_ic_que"/>

            <TextView
                android:id="@+id/meeting_detail_tv_que"
                style="@style/tv.meeting.button"
                android:text="问卷"/>
        </LinearLayout>

        <View
            style="@style/v.meeting"/>

        <!-- 视频 -->
        <LinearLayout
            android:id="@+id/meeting_detail_layout_video"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/meeting_detail_iv_video"
                style="@style/iv.meeting"
                android:src="@mipmap/meeting_ic_video"/>

            <TextView
                android:id="@+id/meeting_detail_tv_video"
                style="@style/tv.meeting.button"
                android:text="视频"/>
        </LinearLayout>

        <View
            style="@style/v.meeting"/>

        <!-- 签到 -->
        <LinearLayout
            android:id="@+id/meeting_detail_layout_sign"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/meeting_detail_iv_sign"
                style="@style/iv.meeting"
                android:src="@mipmap/meeting_ic_sign"/>

            <TextView
                android:id="@+id/meeting_detail_tv_sign"
                style="@style/tv.meeting.button"
                android:text="签到"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/meeting_detail_video_see"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="#ccc"
        android:drawableLeft="@mipmap/meeting_ic_see"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:paddingLeft="@dimen/margin_large"
        android:paddingRight="@dimen/margin_large"
        android:text="会议"
        android:textColor="@color/white"
        android:textSize="14dp"/>

</LinearLayout>