<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <lib.ys.view.CornerView
        android:layout_width="300dp"
        android:layout_height="146dp"
        app:corner_radius="@dimen/radius"
        app:corner_useStroke="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/meeting_single_tv_hint_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取地理位置失败"
                android:textColor="@color/text_333"
                android:textSize="19dp"/>

            <TextView
                android:id="@+id/meeting_single_tv_hint_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="并检查地理位置权限是否已打开"
                android:textColor="@color/text_666"
                android:textSize="15dp"/>

        </LinearLayout>

        <View
            style="@style/divider"
            android:layout_above="@+id/meeting_single_tv_sure"/>

        <TextView
            android:id="@id/meeting_single_tv_sure"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="确定"
            android:textColor="#0682e6"
            android:textSize="16dp"/>

    </lib.ys.view.CornerView>
</LinearLayout>