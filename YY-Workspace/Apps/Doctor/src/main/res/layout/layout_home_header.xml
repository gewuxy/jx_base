<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--banner 容器-->
    <android.support.v4.view.ViewPager
        android:id="@+id/home_header_banner"
        android:layout_width="match_parent"
        android:layout_height="140dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="13dp"
        android:paddingTop="13dp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/home_header_layout_news"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/home_header_iv_news"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/home_ic_news"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_header_iv_news"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"
                android:text="新闻"
                android:textColor="@color/black"
                android:textSize="11dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/home_header_layout_public_num"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/home_header_iv_public_num"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/home_ic_public_num"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_header_iv_public_num"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"
                android:text="公众号"
                android:textColor="@color/black"
                android:textSize="11dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/home_header_layout_knife"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/home_header_iv_knife"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/home_ic_knife"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_header_iv_knife"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"
                android:text="柳叶刀"
                android:textColor="@color/black"
                android:textSize="11dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/home_header_layout_elephant_city"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/home_header_iv_elephant_city"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/home_ic_elephant_city"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_header_iv_elephant_city"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"
                android:text="象城"
                android:textColor="@color/black"
                android:textSize="11dp"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>