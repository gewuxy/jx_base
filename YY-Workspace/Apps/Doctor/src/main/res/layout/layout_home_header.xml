<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--Banner 容器-->
    <yy.doctor.view.BannerView
        android:id="@+id/home_header_banner"
        android:layout_width="match_parent"
        android:layout_height="138dp">

        <lib.ys.view.pager.AutoScrollViewPager
            android:id="@+id/home_header_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <lib.ys.view.pager.indicator.IconPageIndicator
            android:id="@+id/home_header_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="18dp"
            android:orientation="horizontal"
            android:background="@drawable/home_banner_dot_selector"/>

    </yy.doctor.view.BannerView>

</LinearLayout>