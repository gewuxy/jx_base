<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/line_large"/>


    <RelativeLayout
        android:id="@+id/me_layout_head"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:onClick="onClick"
        android:background="@drawable/item_selector">

        <ImageView
            android:id="@+id/me_head_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/form_ic_personal_head"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/me_head_iv"
            android:layout_toLeftOf="@+id/me_arrow"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/me_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/me_head_iv"
                android:layout_toLeftOf="@+id/me_arrow"
                android:textSize="14dp"
                android:textColor="@color/text_333333"
                android:text="name"/>

            <TextView
                android:id="@+id/me_hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/name"
                android:textSize="11dp"
                android:textColor="@color/text_808080"
                android:text="第一人民医院"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/me_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_arrow_right"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/me_attention"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/item_selector"
            android:layout_height="match_parent"
            android:onClick="onClick"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/attention_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/text_333333"
                android:textSize="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已关注"
                android:textColor="@color/text_808080"
                android:textSize="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/me_friends"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/item_selector"
            android:layout_height="match_parent"
            android:onClick="onClick"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/friends_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/text_333333"
                android:textSize="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="好友"
                android:textColor="@color/text_808080"
                android:textSize="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/me_fans"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/item_selector"
            android:layout_height="match_parent"
            android:onClick="onClick"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fans_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/text_333333"
                android:textSize="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="粉丝"
                android:textColor="@color/text_808080"
                android:textSize="10dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>