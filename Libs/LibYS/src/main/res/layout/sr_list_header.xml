<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom">

    <RelativeLayout
        android:id="@+id/sr_list_header_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_header_footer_height"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/sr_list_header_layout_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/sr_list_header_iv_arrow"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/swipe_refresh_ic_arrow"/>

            <TextView
                android:id="@+id/sr_list_header_tv_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sr_list_header_hint_normal"
                android:textColor="@color/text_sr_list_header"
                android:textSize="@dimen/list_header_footer_text"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sr_list_header_layout_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <lib.ys.view.DecorProgressView
                android:id="@+id/sr_list_header_progress_view"
                android:layout_width="@dimen/list_header_footer_loading_size"
                android:layout_height="@dimen/list_header_footer_loading_size"
                android:src="@drawable/ic_loading"/>

            <TextView
                android:id="@+id/sr_list_header_tv_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@string/sr_list_header_hint_loading"
                android:textColor="@color/text_sr_list_header"
                android:textSize="@dimen/list_header_footer_text"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>