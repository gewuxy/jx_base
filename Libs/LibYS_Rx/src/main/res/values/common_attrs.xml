<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--起名规则-->
    <!--style name: 大小写-->
    <!--attr name: 小写前缀_大小写后缀-->

    <declare-styleable name="RatingView">
        <attr name="rating_num" format="integer"/>
        <attr name="rating_starNum" format="float"/>
        <attr name="rating_starGap" format="dimension"/>
        <attr name="rating_starSize" format="dimension"/>
        <attr name="rating_drawableLight" format="reference"/>
        <attr name="rating_drawableHalf" format="reference"/>
        <attr name="rating_drawableDark" format="reference"/>
    </declare-styleable>

    <declare-styleable name="CornerView">
        <attr name="corner_radius" format="dimension"/>
        <attr name="corner_strokeWidth" format="dimension"/>
        <attr name="corner_strokeColor" format="color"/>
        <attr name="corner_foreground" format="reference"/>
    </declare-styleable>

    <declare-styleable name="AnimArcView">
        <attr name="arc_strokeWidth" format="dimension"/>
        <attr name="arc_strokeColor" format="color"/>
        <attr name="arc_startAngle" format="integer"/>
        <attr name="arc_sweepAngle" format="integer"/>
        <attr name="arc_useAnim" format="boolean"/>
        <attr name="arc_strokeBgColor" format="color"/>
        <attr name="arc_drawBg" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="FlowLayout">
        <attr name="vg_horSpacing" format="dimension"/>
        <attr name="vg_verSpacing" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ToggleButton">
        <attr name="toggle_colorCheck" format="color"/>
        <attr name="toggle_colorUnCheck" format="color"/>
    </declare-styleable>

    <declare-styleable name="NetworkImageView">
        <attr name="niv_foreground" format="reference"/>
    </declare-styleable>

</resources>