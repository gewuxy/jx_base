<?xml version="1.0" encoding="utf-8"?>
<lib.ys.view.scrollableLayout.ScrollableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vp_tab_layout_scrollable"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/vp_tab_layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/vp_tab_layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <lib.ys.view.pager.indicator.TabStripIndicator
            android:id="@+id/vp_tab_indicator"
            android:layout_width="match_parent"
            android:layout_height="41dp"/>

    </RelativeLayout>

    <include layout="@layout/layout_viewpager"/>

</lib.ys.view.scrollableLayout.ScrollableLayout>